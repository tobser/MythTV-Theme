<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>

    <!-- "I"-> Video Info -> View Cast --> 
    <window name="castpopup">
        <area>320,110,640,500</area>
        <shape name="t" from="popupBg">
            <area>0,0,640,500</area>
        </shape>

        <textarea name="label" from="basetextarea">
            <area>0,0,640,80</area>
            <align>allcenter</align>
            <font>fontBaseLarge</font>
            <multiline>yes</multiline>
            <value>Cast Members</value>
        </textarea>

        <buttonlist name="cast" from="basePopuButtonlist">
            <area>0,100,100%,400</area>
            <buttonarea>0,0,100%,100%</buttonarea>
            <wrapstyle>selection</wrapstyle>
        </buttonlist>
    </window>

    <!-- "I"-> Video Info -> View Full Plot --> 
    <window name="descriptionpopup">
        <area>320,110,640,500</area>
        <shape name="t" from="popupBg">
            <area>0,0,640,500</area>
        </shape>

        <textarea name="label" from="basetextarea">
            <area>0,0,640,80</area>
            <align>allcenter</align>
            <font>fontBaseLarge</font>
            <multiline>yes</multiline>
            <value>Full Plot</value>
        </textarea>

        <textarea name="description" from="basetextarea">
            <area>20,100,100%-20,380</area>
            <multiline>yes</multiline>
            <align>vcenter, justify</align>
        </textarea>
    </window>

    <!-- "I"-> Video Info -> View Details --> 
    <window name="itemdetailpopup">
        <area>100,36,1080,100%-36</area>
        <shape name="t" from="popupBg">
            <area>0,0,100%,100%</area>
        </shape>
        <imagetype name="banner" >
            <area>2,5,1081,200</area>
            <preserveaspect>no</preserveaspect>
            <alpha>255</alpha>
        </imagetype> 
        <shape name="asdf" from="basebackground" >
            <area>0,0,100%,100%</area>
        </shape>

        <textarea name="title" from="basetextarea">
            <area>20,205,100%-20,60</area>
            <font>fontBaseLarge</font>
            <align>vcenter</align>
        </textarea>
        <textarea name="episode" from="basetextarea">
            <area>20,260,100%,40</area>
            <font>fontDescription</font>
            <template>%SEASON%%x|EPISODE| % %SUBTITLE%</template>
            <value></value>
        </textarea>

        <textarea name="length" from="basetextarea">
            <area>760,260,300,40</area>
            <font>fontDescription</font>
            <align>right</align>
        </textarea>

 
        <textarea name="genres" from="basetextarea">
            <area>20,300,100%-20,35</area>
            <template>%GENRES% %COUNTRIES% %YEAR%%, Userrating: |USERRATING%%, Directed by: |DIRECTOR%</template>
            <font>fontBaseTiny</font>
        </textarea>

        <textarea name="description" from="basetextarea">
            <area>20,335,100%-20,290</area>
            <multiline>yes</multiline>
            <align>justify</align>
            <font>fontDescription</font>
            <template>%DESCRIPTION% \n\n%Cast: |CAST%</template>
        </textarea>

        <button name="play_button" from="basebutton">
            <area>50%-120,100%-45,120,40</area>
            <value>Play</value>
        </button>

        <button name="done_button" from="basebutton">
            <area>50%,100%-45,120,40</area>
            <value>Done</value>
        </button>
    </window>

