            <area>50,200,480,40</area>
            <buttonarea>0,0,100%,100%</buttonarea>
            <statetype name="buttonitem" >
                <area>0,0,100%,40</area>
                <state name="selectedinactive"  from="active">
                    <area>0,0,100%,40</area>
                    <textarea name="buttontext" from="basetextarea">
                        <align>allcenter</align>
                        <template>Category: %1</template>
                        <area>0,0,100%,40</area>
                    </textarea>
                </state>
                <state name="active" from="selectedinactive" />
                <state name="selectedactive" from="selectedinactive">
                    <area>0,0,100%,40</area>
                    <shape name="act" from="shapeSelected" >
                        <area>0,0,100%,40</area>
                    </shape>
                </state>

                <state name="inactive"  from="selectedinactive">
                    <textarea name="buttontext">
                        <alpha>60</alpha>
                    </textarea>
                </state>
            </statetype>

            <statetype name="upscrollarrow">
                <state type="off">
