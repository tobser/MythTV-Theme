            <area>290,360,700,40</area>
            <buttonarea>0,0,700,40</buttonarea>
        </buttonlist>
        <buttonlist name="recgroup" from="scheduleList">
            <area>290,400,700,40</area>
            <buttonarea>0,0,700,40</buttonarea>
        </buttonlist>
        <buttonlist name="storagegroup" from="scheduleList">
            <area>290,440,700,40</area>
            <buttonarea>0,0,700,40</buttonarea>
        </buttonlist>
        <buttonlist name="playgroup" from="scheduleList">
            <area>290,480,700,40</area>
            <buttonarea>0,0,700,40</buttonarea>
        </buttonlist>

        <spinbox name="maxepisodes" from="spinboxBase">
            <area>290,520,700,40</area>
            <layout>horizontal</layout>
            <template type="zero">No episode limit</template>
            <template type="positive">Keep at most %n episode(s)</template>
        </spinbox>

        <buttonlist name="maxnewest" from="scheduleList">
            <area>290,560,700,40</area>
            <buttonarea>0,0,700,40</buttonarea>
        </buttonlist>

        <checkbox name="autoexpire" from="checkboxBase">
            <area>290,600,700,40</area>
            <statetype name="background">
                <state name="selected">
                    <textarea name="text">
                        <value>Allow recordings to expire?</value>
                    </textarea>
                </state>
                <state name="active">
                    <textarea name="text">
                        <value>Allow recordings to expire?</value>
                    </textarea>
                </state>
                <state name="disabled">
                    <textarea name="text">
                        <value>Allow recordings to expire?</value>
                    </textarea>
                </state>
            </statetype>
            <statetype name="checkstate">
                <state type="full">
                    <textarea name="X">
                        <value>X</value>
                    </textarea>
                </state>
            </statetype>
        </checkbox>

