    <window name="scheduleeditor">
        <area>0,0,100%,100%</area>
        <shape name="mytitle" from="titleBar" >
            <textarea name="pagetitle">
                <value>Schedule Editor</value>
            </textarea>
        </shape>

        <!-- program details: -->
        <shape name="asdf" from="basebackground" >
            <area>100,36,1080,320</area>
        </shape>

        <textarea name="title" from="basetextarea">
            <area>120,45,1000,40</area>
            <font>fontBaseLarge</font>
            <cutdown>yes</cutdown>
            <align>allcenter</align>
        </textarea>

        <textarea name="channel" from="basetextarea">
            <area>130,90,160,30</area>
        </textarea>

        <textarea name="timedate" from="basetextarea">
            <area>290,90,480,30</area>
        </textarea>

        <textarea name="description" from="basetextarea">
            <area>130,130,1040,210</area>
            <multiline>yes</multiline>
            <cutdown>yes</cutdown>
            <template>%"|SUBTITLE|" %%(|STARS|) %%DESCRIPTION%</template>
        </textarea>
        <shape name="buttonsBg" from="basebackground">
            <area>250,352,780,360</area>
        </shape>

        <!-- options: -->

        <buttonlist name="rules" from="scheduleList">
            <area>290,360,700,40</area>
            <buttonarea>0,0,700,40</buttonarea>
        </buttonlist>

        <button name="schedoptions" from="scheduleButton">
            <area>290,401,700,40</area>
            <value>Schedule Options</value>
        </button>

        <button name="storeoptions"  from="scheduleButton">
            <area>290,440,700,40</area>
            <value>Storage Options</value>
        </button>

        <button name="postprocessing"  from="scheduleButton">
            <area>290,480,700,40</area>
            <value>Post Processing</value>
        </button>

        <button name="schedinfo"  from="scheduleButton">
            <area>290,520,700,40</area>
            <value>Schedule Info</value>
        </button>

        <button name="preview"  from="scheduleButton">
            <area>290,560,700,40</area>
            <value>Preview</value>
        </button>

        <button name="metadata"  from="scheduleButton">
            <area>290,600,700,40</area>
            <value>Metadata Options</value>
        </button>

        <button name="cancel" from="basebuttonBorder">
            <area>50%-120,660,120,40</area>
            <value>Cancel</value>
        </button>

        <button name="save" from="basebuttonBorder">
            <area>50%,660,120,40</area>
            <value>Save</value>
        </button>
    </window>

    <window name="storageoptionseditor" >
        <area>0,0,100%,100%</area>
        <shape name="mytitle" from="titleBar" >
            <textarea name="pagetitle">
                <value>Storage Options</value>
            </textarea>
        </shape>

        <!-- program details: -->
        <shape name="asdf" from="basebackground" >
            <area>100,36,1080,320</area>
        </shape>

        <textarea name="title" from="basetextarea">
            <area>120,45,1000,40</area>
            <font>fontBaseLarge</font>
            <cutdown>yes</cutdown>
            <align>allcenter</align>
        </textarea>

        <textarea name="channel" from="basetextarea">
            <area>130,90,160,30</area>
        </textarea>

        <textarea name="timedate" from="basetextarea">
            <area>290,90,480,30</area>
        </textarea>

        <textarea name="description" from="basetextarea">
            <area>130,130,1040,210</area>
            <multiline>yes</multiline>
            <cutdown>yes</cutdown>
            <template>%"|SUBTITLE|" %%(|STARS|) %%DESCRIPTION%</template>
